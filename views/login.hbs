<h2>Log In!</h2>
    {{#if missatgeError}}
        <div class="alert alert-danger" role="alert">
            {{missatgeError}}
        </div>
    {{/if}}
    <form action="/login" method="POST" class="w-25 mx-auto m-5">
        <div class="mb-3">
            <label for="titol" class="form-label">Username</label>
            <input type="text" class="form-control" id="titol" aria-describedby="emailHelp" autocomplete="off" name="username">

            <label for="titol" class="form-label">Password</label>
            <input type="password" class="form-control" id="titol" aria-describedby="emailHelp" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Log In!</button>
</form>
        <form action="/sign-up">
            <input class=" position-absolute btn btn-info mb-3 translate-middle" type="submit" value="Sign Up">
        </form>
    